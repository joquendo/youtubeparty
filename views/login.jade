extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title WeTube Party
          div.account-wall
            img(class='profile-img center', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
            form(class='form-signin', action='/login', method='POST')
              input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
              input(type='password', name='password' class='form-control', placeholder='Password', required)
              button(class='btn btn-lg btn-success btn-block', type='submit') Sign in
              br
              span.clearfix
              div Or
              br
              span.clearfix
              a(href='/auth/facebook' class='btn btn-primary btn-lg btn-block')
                span(class='fa fa-facebook') 
                  |Facebook
          a(href='/signup', class='text-center new-account') Register a new Account
          #message
          if message
            h1.text-center.error-message #{message}
