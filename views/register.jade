extends layout

block content
  div.container-md
    div.row
      div.col-md-4.col-md-offset-4
        h1.text-center.login-title YouTube Party
          div.account-wall
            img(class='profile-img center', src='/images/profile-default.png')
            h3.text-center Create an Account
            form(class='form-register', action='/signup', method='POST')
              input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
              input(type='password', name='password' class='form-control', placeholder='Password', required)
              input(type='text', name='email' class='form-control', placeholder='Email', required)
              input(type='text', name='firstname' class='form-control', placeholder='First Name', required)
              input(type='text', name='lastname' class='form-control', placeholder='Last Name', required)
              button(class='btn btn-lg btn-success btn-block', type='submit') Sign up
              br
              span.clearfix
              div Or
              br
              span.clearfix
              a(href='/auth/facebook' class='btn btn-primary btn-lg btn-block')
                span(class='fa fa-facebook') 
                  |Facebook
          a(href='/login', class='text-center log-in') Log in
          #message
          if message
            h1.text-center.error-message #{message}
